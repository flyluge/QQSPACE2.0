<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Album" table="album" schema="qqspace">
        <id name="alid">
            <column name="alid" sql-type="int(11)"/>
        	<generator class="native"></generator>
        </id>
        <property name="uid">
            <column name="uid" sql-type="int(11)" />
        </property>
        <property name="image">
            <column name="image"/>
        </property>
    </class>
</hibernate-mapping>