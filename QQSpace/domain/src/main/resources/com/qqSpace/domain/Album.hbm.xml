<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Album" table="album" schema="qqspace">
        <id name="alid">
            <column name="alid" sql-type="int(11)"/>
        </id>
        <property name="image">
            <column name="image" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <many-to-one name="userByUid" class="com.qqSpace.domain.User">
            <column name="uid" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>