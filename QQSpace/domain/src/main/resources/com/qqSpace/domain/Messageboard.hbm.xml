<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Messageboard" table="messageboard" schema="qqspace">
        <id name="mbid">
            <column name="mbid" sql-type="int(11)"/>
        </id>
        <property name="tuid">
            <column name="tuid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="wuid">
            <column name="wuid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(255)"/>
        </property>
        <property name="pubdate">
            <column name="pubdate" sql-type="datetime" not-null="true"/>
        </property>
        <many-to-one name="userByTuid" class="com.qqSpace.domain.User">
            <column name="tuid" not-null="true"/>
        </many-to-one>
        <many-to-one name="userByWuid" class="com.qqSpace.domain.User">
            <column name="wuid" not-null="true"/>
        </many-to-one>
        <set name="reMessageboardsByMbid" inverse="true">
            <key>
                <column name="mbid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.ReMessageboard"/>
        </set>
    </class>
</hibernate-mapping>