<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.ReComment" table="re_comment" schema="qqspace">
        <id name="rmid">
            <column name="rmid" sql-type="int(11)"/>
        </id>
        <property name="uid">
            <column name="uid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="cid">
            <column name="cid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="pubdate">
            <column name="pubdate" sql-type="datetime" not-null="true"/>
        </property>
        <many-to-one name="userByUid" class="com.qqSpace.domain.User">
            <column name="uid" not-null="true"/>
        </many-to-one>
        <many-to-one name="commentByCid" class="com.qqSpace.domain.Comment">
            <column name="cid" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>