<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Comment" table="comment" schema="qqspace">
        <id name="cid">
            <column name="cid" sql-type="int(11)"/>
        </id>
        <property name="content">
            <column name="content" sql-type="varchar(255)" />
        </property>
        <property name="pubdate">
            <column name="pubdate" sql-type="datetime" />
        </property>
        <many-to-one name="userByUid" class="com.qqSpace.domain.User" insert="false" update="false">
            <column name="uid" />
        </many-to-one>
        <many-to-one name="articleByAid" class="com.qqSpace.domain.Article" insert="false" update="false">
            <column name="aid" />
        </many-to-one>
        <set name="reCommentsByCid" inverse="true">
            <key>
                <column name="cid" />
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.ReComment"/>
        </set>
    </class>
</hibernate-mapping>