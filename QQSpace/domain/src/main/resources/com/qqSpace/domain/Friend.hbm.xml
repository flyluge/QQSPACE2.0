<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Friend" table="friend" schema="qqspace">
        <id name="fid">
            <column name="fid" sql-type="int(11)"/>
        </id>
        <property name="status">
            <column name="status" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="userByTuid" class="com.qqSpace.domain.User">
            <column name="tuid" not-null="true"/>
        </many-to-one>
        <many-to-one name="userByFuid" class="com.qqSpace.domain.User">
            <column name="fuid" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>