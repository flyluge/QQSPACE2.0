<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.User" table="user" schema="qqspace">
        <id name="uid">
            <column name="uid" sql-type="int(11)"/>
            <generator class="native"></generator>
        </id>
        <property name="useremail">
            <column name="useremail" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="userpassword">
            <column name="userpassword" sql-type="varchar(255)"/>
        </property>
        <property name="userphone">
            <column name="userphone" sql-type="varchar(11)" length="11" not-null="true"/>
        </property>
        <property name="username">
            <column name="username" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="true"/>
        </property>
        <property name="astro">
            <column name="astro" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="career">
            <column name="career" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="hometown">
            <column name="hometown" sql-type="varchar(255)" not-null="true"/>
        </property>
        <set name="albumsByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Album"/>
        </set>
        <set name="articlesByUid" inverse="true">
            <key>
                <column name="uid"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Article"/>
        </set>
        <set name="commentsByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Comment"/>
        </set>
        <set name="friendsByUid" inverse="true">
            <key>
                <column name="tuid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Friend"/>
        </set>
        <set name="messageboardsByUid" inverse="true">
            <key>
                <column name="tuid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Messageboard"/>
        </set>
        <set name="praisesByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Praise"/>
        </set>
        <set name="reCommentsByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.ReComment"/>
        </set>
        <set name="reMessageboardsByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.ReMessageboard"/>
        </set>
    </class>
</hibernate-mapping>