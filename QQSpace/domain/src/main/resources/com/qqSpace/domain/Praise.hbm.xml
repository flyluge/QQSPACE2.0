<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Praise" table="praise" schema="qqspace">
        <id name="pid">
            <column name="pid" sql-type="int(11)"/>
        </id>
        <many-to-one name="userByUid" class="com.qqSpace.domain.User">
            <column name="uid" not-null="true"/>
        </many-to-one>
        <many-to-one name="articleByAid" class="com.qqSpace.domain.Article">
            <column name="aid" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>