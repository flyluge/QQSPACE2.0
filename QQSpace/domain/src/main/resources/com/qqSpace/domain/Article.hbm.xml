<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.qqSpace.domain.Article" table="article" schema="qqspace">
        <id name="aid">
            <column name="aid" sql-type="int(11)"/>
        </id>
        <property name="content">
            <column name="content" sql-type="varchar(255)" />
        </property>
        <property name="image">
            <column name="image" sql-type="varchar(255)" />
        </property>
        <property name="pubdate">
            <column name="pubdate" sql-type="datetime" />
        </property>
        <many-to-one name="userByUid" class="com.qqSpace.domain.User">
            <column name="uid"/>
        </many-to-one>
        <set name="commentsByAid" inverse="true">
            <key>
                <column name="aid" />
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Comment"/>
        </set>
        <set name="praisesByAid" inverse="true">
            <key>
                <column name="aid" />
            </key>
            <one-to-many not-found="ignore" class="com.qqSpace.domain.Praise"/>
        </set>
    </class>
</hibernate-mapping>